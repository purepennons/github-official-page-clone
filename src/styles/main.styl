@require './button'
@require './input'

$v-padding = (32/$base-rem)rem
$h-padding = (40/$base-rem)rem

.introduction {
    background: $soft-black url('https://assets-cdn.github.com/images/modules/site/heroes/simple-codelines.svg') no-repeat
    background-position: center 10%
    background-size: cover

    .section-container {
        display: flex
        flex-flow: row nowrap
        justify-content: center
        max-width: 1012px
        margin: 0 auto
        padding: 100px 0
        
    }

    .github-introduction {
        display: flex
        flex-flow: column nowrap
        justify-content: center
        flex: 2 1 0
        color: $white
        font-family: Roboto, -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Segoe UI", "Oxygen", "Ubuntu", "Cantarell", "Open Sans", sans-serif
        padding: 0 24px

        h1, a, p {
            font-weight: 300
            font-size: (26/$base-rem)rem
            text-align: left
        }

        a, p {
            line-height: 1.5
        }

        h1 {
            margin-top: -1px
            margin-bottom: 16px
            font-size: (72/$base-rem)rem
            line-height: 1
        }

        p {
            margin-top: 0
            margin-bottom: 24px
            color: rgba(255, 255, 255, 0.6)
        }

        a {
            color: @color
            border-bottom: 1px solid rgba(255,255,255,0.125)
        }

    }


    .reigster-form {
        flex: 1 1 0
        padding: 0 (24/$base-rem)rem

        form {
            background: rgb(250, 251, 252)
            border-radius: $item-border-radius
            padding: (24/$base-rem)rem $h-padding
            width: 380px
            
            > * {
                width: 100%
                line-height: 1.5
            }

            p {
                color: rgb(106, 115, 125)
                font-size: (12/$base-rem)rem
            }
            
            #reigster-privacy {
                text-align: center
            }
        }


        .form-item {

            dd {
                margin: 0
            }

            label, input, button {
                display: block
                width: 100%
                min-width: 200px
            }
            label {
                color: rgb(88, 96, 105)
                font-size: (14/$base-rem)rem
                margin-bottom: 5px
            }
        }
    }
}

.conference {
    background: $hard-black
    padding: $v-padding $h-padding

    .conference-container {
        display: flex
        flex-flow: row wrap
        justify-content: center
        align-items: center
        margin: 0 auto

        .conf-logo {
            padding-top: 1rem
            padding-right: $h-padding

            img {
                width: 205px
            }
        }

        .conf-description {
            width: 300px

            img {
                width: 215px
            }

            p {
                color: $white
                text-align: left
                margin: 8px 0
                line-height: 1.5
            }

            .learn-more {
                $link-color = #959da5


                a {
                    display: flex
                    flex-flow: row nowrap
                    align-items: center
                    color: $link-color
                }

                svg {
                    fill: $link-color
                    margin-left: 8px
                }
            }

            // a {
            //     &:last-child {
                    
            //     }
            // }
        }
    }
    
}
