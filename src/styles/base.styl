@require './general'
@require './component'

* {
    box-sizing: border-box
    line-height: $base-line-height
    word-wrap: break-word
}

html {
    block-center()
    font-family: $font-family
    font-size: $font-size
    background: $base-background-color
}

section {
    padding: 80px 0
}

img, svg, section {
    block-center()
}

a {
    text-decoration: none

    &:link, &:visited {
        color: $link-color
    }
}

h1, h2, h3, h4, h5, h6 {
    font-family: Roboto, $font-family
    -webkit-font-smoothing: antialiased
}

h1 {
    margin-top: -1px
    margin-bottom: 16px
    font-size: (72/$base-rem)rem
    line-height: 1
    font-weight: 300
    text-align: left
    color: $white
}

h2 {
    color: $hard-black
    font-size: (54/$base-rem)rem
    font-weight: 300
    line-height: 1.25
    margin-top: 16px
    margin-bottom: 8px
}

h3 {
    margin-bottom: 4px
    font-weight: 400
    font-size: (22/$base-rem)rem
    color: $hard-black
    
}

h6 {
    font-weight: normal
    font-size: 1rem
    margin: 0 auto
    color: $darker-gary
}