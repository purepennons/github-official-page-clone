@require './general'

* {
    box-sizing: border-box
    line-height: $base-line-height
    word-wrap: break-word
}

html {
    font-family: $font-family
    font-size: $font-size
    background: $base-background-color
    margin: 0 auto
}

a {
    text-decoration: none

    &:link, &:visited {
        color: $link-color
    }
}