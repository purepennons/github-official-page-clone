@require './general'

// functions or templates
link-style($link-color = $blue) {
    .arrow-link {
        margin-bottom: 10px

        a {
            display: flex
            flex-flow: row nowrap
            align-items: center
            color: $link-color
        }

        svg {
            fill: $link-color
            margin-left: 8px
        }

        &:hover {
            text-decoration: underline
        }
    }
}

block-center() {
    display: block
    margin: 0 auto
}

flex-h-v-center() {
    display: flex
    align-items: center
    justify-content: center
}

container() {
    block-center()
    flex-h-v-center()
    max-width: $basic-max-site-width
}

feature-title-description() {
    p {
        block-center()
        color: $darker-gary
        width: 66.67%
        margin-bottom: 30px
        font-size: (20/$base-rem)rem
        line-height: 1.5
        font-weight: 300
    }
}

feature-description() {
    p {
        font-size: 1rem
        line-height: 1.5
    }
}

feature-title() {
    .feature-title {
        .feature-logo {
            text-align: center
            
            svg {
                width: 64px
                padding-bottom: 8px
            }
        }

        .feature-title-and-description {
            feature-title-description()
            text-align: center
        }
    }
}

pop_label($content = '', $font-color = $white, $background-color = rgba(27, 31, 35, 0.8)) {
    &::before {
        content: ''
        position: relative
        width: 0
        height: 0
        border-top: 5px solid transparent
        border-left: 5px solid transparent
        border-right: 5px solid transparent
        border-bottom: 5px solid $background-color
        position: absolute
        top: 100%
        margin-top: -5px
        padding: 0
        z-index: 10000

    }

    &::after {
        content: $content
        color: $font-color
        background: $background-color
        border-radius: $item-border-radius
        padding: 5px 8px
        text-align: center
        position: absolute
        top: 100%
        margin-top: 5px
        white-space: pre
        font-size: (11/$base-rem)rem
        z-index: 10000
    }
}

// classes
.feature-container {
    feature-title()
    block-center()
    max-width: $basic-max-site-width
    padding: 0 16px
}

.h3-text {
    feature-description()
}

.person-introduction {
    flex-h-v-center()
    max-width: 330px
    line-height: 1.5
    padding: 8px
    box-shadow: 0 10px 50px rgba(27, 31, 35, 0.07)

    a {
        flex-h-v-center()

        .person-img, .author-description {
            display: inline-block
            width: 50%
        }

        .person-img {
            img {
                max-width: 100%
            }
        }

        .author-description {
            text-align: center
            padding: 0 16px
            
            h2, p {
                color: $hard-black
                word-wrap: break-word
                font-weight: 300
                font-family: $font-family
            }

            h2 {
                font-size: (24/$base-rem)rem
                margin-bottom: 4px
                line-height: 1.25
            }

            p {
                color: $darker-gary
                font-size: (12/$base-rem)rem
            }
        }
    }
}