@require './general'

.text-input {
    border: 1px solid #d1d5da
    border-radius: 5px
    background: $white
    min-height: (46rem/$base-rem)
    padding: 10px
    box-shadow: inset 0 1px 2px rgba(27, 31, 35, 0.075)
    font-family: inherit
    line-height: (20/$base-rem)rem

    &:focus {
        outline: none
        border: 1px solid rgb(33, 136, 255)
    }

    &::placeholder {
        color: $gray
    }
}